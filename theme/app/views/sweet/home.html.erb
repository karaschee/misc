<div class="sw_homeslide">
  <div class="swiper-container" id="j_homeslide">
    <div class="swiper-wrapper">
      <% ['0052_foodsense.jpg', '0140_foodsense.jpg', '0219_foodsense.jpg', '0232_foodsense.jpg'].each do |picture| %>
        <div class="swiper-slide">
          <%= image_tag 'sweet/'+picture %>
        </div>
      <% end %>
    </div>
  </div>
  <div id="j_homeslideindex" class="sw_homeslide_index"></div>
</div>

<div class="row">
  <div class="col-md-9 col-md-push-3">
    <ul class="sw_homepanel">
      <li>
        <%= link_to "#" do %>
          <span class="glyphicon glyphicon-comment"></span>
          <p>会员中心</p>
        <% end %>
      </li>
      <li>
        <%= link_to "#" do %>
          <span class="glyphicon glyphicon-shopping-cart"></span>
          <p>促销活动</p>
        <% end %>
      </li>
      <li>
        <%= link_to "#" do %>
          <span class="glyphicon glyphicon-heart-empty"></span>
          <p>产品中心</p>
        <% end %>
      </li>
      <li>
        <%= link_to "#" do %>
          <span class="glyphicon glyphicon-phone-alt"></span>
          <p>客服服务</p>
        <% end %>
      </li>
    </ul>

    <h2 class="sw_mtitle first">产品展示</h2>
    <ul class="nav nav-tabs nav-sw">
      <li class="active"><a href="#">新品上市</a></li>
      <li><a href="#">精品推荐</a></li>
    </ul>
    <%= render "sweet/products" %>
  </div>


  <div class="col-md-3 col-md-pull-9">
    <div class="sw_login hidden-xs">
      <form role="form">
        <div class="form-group">
          <!-- <label for="exampleInputEmail1">用户名</label> -->
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="用户名">
        </div>
        <div class="form-group">
          <!-- <label for="exampleInputPassword1">密码</label> -->
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="密码">
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox"> 以后自动登录
          </label>
        </div>
        <button type="submit" class="btn btn-default">登录</button>
        <button type="submit" class="btn btn-default">注册</button>
      </form>
    </div>

    <%= render "sweet/articles" %>
  </div>
</div>

<%= content_for(:javascripts) do %>
  <script type="text/javascript">
    $(function(){
      var swiper = $('#j_homeslide');
      // swiper.css('height', $(window).height()/3);

      var mySwiper = new Swiper('#j_homeslide',{
        pagination: '#j_homeslideindex',
        loop:true,
        grabCursor: true,
        paginationClickable: true
      });
    });
  </script>
<% end %>