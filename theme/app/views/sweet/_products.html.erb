<% @products.each do |p| %>
  <div class="sw_product">
    <%= link_to sweet_product_url do %>
      <%= image_tag p[:thumb] %>
    <% end %>
    <div class="sw_product_content">
      <h3 class="sw_product_title">
        <%= link_to p[:title], sweet_product_url%> 
      </h3>
      <div class="sw_product_desc">
        <p class="sw_product_desc_main">
          <%= p[:desc] %>
        </p>
        <p class="sw_product_price">
          店面价：<span>￥<%= p[:price] %></span>
          促销价：<span>￥<%= p[:price] %></span>
          会员价：<span>￥<%= p[:price] %></span>
        </p>
        <p>
          <%= link_to "查看 &raquo;".html_safe, sweet_product_url, class: "more sw_button sw_button-i" %>
        </p>
      </div>
    </div>
    <p class="sw_product_price">
      店面价：<span>￥<%= p[:price] %></span>
      促销价：<span>￥<%= p[:price] %></span>
      会员价：<span>￥<%= p[:price] %></span>
    </p>
  </div>
<% end %>